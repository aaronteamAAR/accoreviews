---
const {
    id,
    title,
    author,
    date,
    time,
    image,
    content,
    category,
    tags,
    readingTime,
} = Astro.props
---

<div class="p-2.5">
    <div class="group relative">
        <div class="absolute top-6 left-6 py-1.5 px-2.5 bg-[var(--color-secondary-2)] text-xs text-white hidden group-hover:block transition-all duration-1000">{category}</div>
        <img 
        src={image} 
        alt={`Image from Blog post ${id}`}
        class="w-full h-[300px] object-cover hover:cursor-pointer"
        />
    </div>
    <div class="flex flex-col justify-between h-[100px]">
        <h4 class="font-thin text-lg my-3 text-gray-500 hover:text-[var(--color-secondary-2)] hover:cursor-pointer">{title}</h4>
        <div class="flex gap-1.5 items-center text-xs justify-end">
            <span>By {author}</span>
            <span class="h-1 w-1 rounded-full bg-[var(--color-secondary-2)]"></span>
            <span class="text-gray-600">{readingTime} read</span>
        </div>
    </div>
</div>